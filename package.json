{
  "name": "pearmo",
  "version": "1.0.0",
  "description": "Pearmo is a peer-to-peer chat website.",
  "repository": "github:Sammy-T/Pearmo",
  "main": "index.js",
  "scripts": {
    "start": "hugo server -D -s site",
    "dev": "npm run prebuild && run-p dev:**",
    "dev:hugo": "hugo server -D -e development -s site --renderToDisk",
    "dev:firebase": "firebase emulators:start",
    "prebuild": "rimraf dist",
    "build": "hugo -s site",
    "build:preview": "npm run prebuild && hugo -D -e development -s site",
    "deploy": "npm run build && firebase deploy"
  },
  "keywords": [],
  "author": "Sammy Telusma",
  "license": "MIT",
  "devDependencies": {
    "hugo-bin": "^0.71.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "spectre.css": "^0.5.9"
  }
}
